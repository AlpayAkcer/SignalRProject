@model List<ResultAboutDto>
<section class="about_section layout_padding">
    <div class="container  ">

        <div class="row">
            @foreach (var item in Model.Take(1))
            {
                <div class="col-md-6 ">
                    <div class="img-box">
                        <img src="/UI/images/about-img.png" alt="">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="detail-box">
                        <div class="heading_container">
                            <h2>
                                @item.Title
                            </h2>
                        </div>
                        <p>
                            @item.Description
                        </p>
                        <a href="/About">
                            Devamını Oku
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>