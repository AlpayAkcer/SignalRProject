@model List<ResultProductWithCategory>
<section class="food_section layout_padding-bottom">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Menü
            </h2>
        </div>

        @await Component.InvokeAsync("_DefaultOurMenuCategoryPartialComponent")

        <div class="filters-content">
            <div class="row grid">
                @foreach (var item in Model.Take(16))
                {
                    <div class="col-sm-6 col-lg-4 all @item.CategoryName">
                        <div class="box">
                            <div>
                                <div class="img-box">
                                    <img src="/UI/images/f1.png" alt="">
                                </div>
                                <div class="detail-box">
                                    <h5>
                                        @item.ProductName
                                    </h5>
                                    <p>
                                        @item.Description - @item.CategoryName
                                    </p>
                                    <div class="options">
                                        <h6>
                                            @item.Price.ToString("C")
                                        </h6>
                                        <a href="">
                                            <i class="la la-shopping-cart"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="btn-box">
            <a href="/Menu/">
                Daha Fazlasını Gör
            </a>
        </div>
    </div>
</section>