@model UpdateNotificationDto
@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">
            Yeni Bildirim Kayıt
            <a href="/Notification" style="float:right;" class="btn btn-outline-primary">Liste</a>
        </h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <input type="hidden" asp-for="NotificationID" />
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Bildirim Bilgileri</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Type">Bildirim Css Clas</label>
                                <input type="text" class="form-control" id="Type" asp-for="Type">
                            </div>
                            <div class="form-group">
                                <label for="Icon">Bildirim Icon</label>
                                <input type="text" class="form-control" id="Icon" asp-for="Icon">
                            </div>
                            <div class="form-group">
                                <label for="Description">Açıklama</label>
                                <textarea type="text" class="form-control" id="Description" rows="5" asp-for="Description"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Güncelle</button>
                            <button class="btn btn-danger">Iptal</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>





