@model CreateNotificationDto
@{
    ViewData["Title"] = "CreateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">
            Yeni Bildirim Kayıt
            <a href="/Notification" style="float:right;" class="btn btn-outline-primary">Liste</a>
        </h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Bildirim Bilgileri</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Type">Bildirim Css Clas</label>
                                <input type="text" class="form-control" id="Type" asp-for="Type" placeholder="Css Class Adı">
                            </div>
                            <div class="form-group">
                                <label for="Icon">Bildirim Icon</label>
                                <input type="text" class="form-control" id="Icon" asp-for="Icon" placeholder="Icon Adı">
                            </div>
                            <div class="form-group">
                                <label for="Description">Açıklama</label>
                                <textarea type="text" class="form-control" id="Description" asp-for="Description" rows="5"></textarea>
                            </div>
                            <div class="form-check">
                                <label>Durum</label><br />
                                <label class="form-radio-label">
                                    <input class="form-radio-input" type="radio" name="Status" asp-for="Status" value="" checked="">
                                    <span class="form-radio-sign">Aktif</span>
                                </label>
                                <label class="form-radio-label ml-3">
                                    <input class="form-radio-input" type="radio" name="Status" asp-for="Status" value="">
                                    <span class="form-radio-sign">Pasif</span>
                                </label>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Kaydet</button>
                            <button class="btn btn-danger">Iptal</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



